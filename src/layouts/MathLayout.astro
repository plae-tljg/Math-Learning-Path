---
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
	lang: 'zh' | 'en';
	currentPath: string;
}

const { title, lang, currentPath } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.25/dist/katex.min.css" />
	</head>
	<body>
		<Navigation lang={lang} currentPath={currentPath} />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
			'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
		line-height: 1.6;
		color: #333;
	}

	body {
		margin: 0;
		background: #fafafa;
		min-height: 100vh;
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		background: white;
		min-height: calc(100vh - 80px);
	}

	h1 {
		color: #1a1a1a;
		border-bottom: 3px solid #3245ff;
		padding-bottom: 0.5rem;
		margin-top: 0;
	}

	h2 {
		color: #2a2a2a;
		margin-top: 2rem;
	}

	h3 {
		color: #3a3a3a;
		margin-top: 1.5rem;
	}

	/* KaTeX 样式调整 */
	.katex {
		font-size: 1.1em;
	}

	.katex-display {
		margin: 1.5em 0;
		overflow-x: auto;
		overflow-y: hidden;
	}

	/* 代码块样式 */
	pre {
		background: #f5f5f5;
		padding: 1rem;
		border-radius: 6px;
		overflow-x: auto;
	}

	code {
		background: #f5f5f5;
		padding: 0.2em 0.4em;
		border-radius: 3px;
		font-size: 0.9em;
	}

	pre code {
		background: none;
		padding: 0;
	}

	/* 链接样式 */
	a {
		color: #3245ff;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	/* 列表样式 */
	ul, ol {
		padding-left: 2rem;
	}

	li {
		margin: 0.5rem 0;
	}

	/* 响应式 */
	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}
	}
</style>

